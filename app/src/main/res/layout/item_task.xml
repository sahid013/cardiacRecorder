<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    android:layout_height="160dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                <ImageView-->
<!--                    android:id="@+id/options_t"-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:background="@drawable/more"-->
<!--                    />-->

                <ImageView
                    android:id="@+id/alertOrApprovalImage"
                    android:layout_width="27dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="240dp"/>

                <ImageView
                    android:id="@+id/updateOrDeleteOption"
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_appmoree" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"

              >

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/systolic_pressure_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:fontFamily="monospace"
                    android:layout_marginRight="10dp"
                    tools:text="Systolic: " />

                <TextView
                    android:id="@+id/diastolic_pressure_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:fontFamily="monospace"
                    android:layout_marginRight="10dp"
                    tools:text="Diastolic: " />


                <TextView
                    android:id="@+id/heart_rate_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:fontFamily="monospace"
                    tools:text="Heart Rate: " />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/recordingDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:alpha="0.5"
                    android:text="Fri"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/recordingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/recordingMonth"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="Jan"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/showRecordingTime"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    tools:text="10:02" />

            </LinearLayout>
            <TextView
                android:id="@+id/showComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                tools:text="comment shown here"
                android:fontFamily="monospace"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>